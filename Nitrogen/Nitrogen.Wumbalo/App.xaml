<Application x:Class="Nitrogen.Wumbalo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:Nitrogen.Wumbalo.Converters"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!-- Default Accent -->
				<ResourceDictionary Source="Modern\Accents\Green.xaml" />
				
				<!-- Default Theme -->
				<ResourceDictionary Source="Modern\Themes\Dark.xaml" />

				<!-- Controls -->
				<ResourceDictionary Source="Modern\Controls\Buttons.xaml" />
				<ResourceDictionary Source="Modern\Controls\Borders.xaml" />
				<ResourceDictionary Source="Modern\Controls\Fonts.xaml" />
				<ResourceDictionary Source="Modern\Controls\TextBlock.xaml" />
				<ResourceDictionary Source="Modern\Controls\TextBox.xaml" />
				<ResourceDictionary Source="Modern\Controls\ScrollBar.xaml" />
                <ResourceDictionary Source="Modern\Controls\EditorControls.xaml" />
			</ResourceDictionary.MergedDictionaries>
			
			<s:String x:Key="AppTitle">Wumbalo</s:String>
			<converters:CreateApplicationTitle x:Key="IValueCreateApplicationTitle" />
			<converters:EnumToString x:Key="IValueEnumToString" />
		</ResourceDictionary>
	</Application.Resources>
</Application>
