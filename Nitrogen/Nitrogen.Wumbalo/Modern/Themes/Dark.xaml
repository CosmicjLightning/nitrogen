<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF000000" />
	<Color x:Key="WindowBackgroundBrushColour" A="#FF" R="#00" G="#00" B="#00" />

	<SolidColorBrush x:Key="WindowActionButtonBrush" Color="#FFF4F4F5" />
	<SolidColorBrush x:Key="WindowActionHoverBrush" Color="#FF262626" />
	
	<!-- Font Colours -->
	<SolidColorBrush x:Key="WindowTitleBrush" Color="#FF636363" />
	<Color x:Key="WindowTitleBrushColour" A="#FF" R="#63" G="#63" B="#63" />

</ResourceDictionary>