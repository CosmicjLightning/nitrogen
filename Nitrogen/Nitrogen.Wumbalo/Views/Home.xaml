<UserControl x:Class="Nitrogen.Wumbalo.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             SnapsToDevicePixels="True"
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition x:Name="Headers" Height="50" />
			<RowDefinition x:Name="Content" Height="*" />
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Bottom" Margin="40,0,0,0">
			<ToggleButton Style="{DynamicResource HomeHeaderButton}">
				Recents
			</ToggleButton>
			<ToggleButton Style="{DynamicResource HomeHeaderButton}" IsChecked="True">
				Home
			</ToggleButton>
			<ToggleButton Style="{DynamicResource HomeHeaderButton}">
				Stuff
			</ToggleButton>
		</StackPanel>

		<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
			
		</ScrollViewer>
	</Grid>
</UserControl>
