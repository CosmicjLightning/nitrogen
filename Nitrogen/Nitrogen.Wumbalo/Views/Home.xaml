<UserControl x:Class="Nitrogen.Wumbalo.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Nitrogen.Wumbalo.ViewModels"
             xmlns:controls="clr-namespace:Nitrogen.Wumbalo.Modern.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             SnapsToDevicePixels="True"
             d:DesignHeight="720" d:DesignWidth="2000">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition x:Name="Headers" Height="50" />
			<RowDefinition x:Name="Content" Height="*" />
		</Grid.RowDefinitions>

		<ItemsControl Grid.Row="0" VerticalAlignment="Bottom" Margin="30,0,0,0" ItemsSource="{Binding Path=(viewModels:HomeViewModel.Headers)}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<VirtualizingStackPanel Orientation="Horizontal"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<ToggleButton Style="{DynamicResource HomeHeaderButton}" Tag="{Binding Path=Tag}" Content="{Binding Path=Name}" IsChecked="{Binding Path=IsSelected}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<ScrollViewer Margin="0,40,0,20" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
					  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" CanContentScroll="False">
			<StackPanel Orientation="Horizontal">
				<Grid x:Name="RecentsGrid" Margin="40,0,0,0">
					<ItemsControl VerticalAlignment="Top" Margin="40,0,0,0" ItemsSource="{Binding Path=(viewModels:HomeViewModel.RecentsForXaml)}">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<StackPanel Orientation="Horizontal"></StackPanel>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<ItemsControl ItemsSource="{Binding}">
									<ItemsControl.ItemsPanel>
										<ItemsPanelTemplate>
											<StackPanel Orientation="Vertical"></StackPanel>
										</ItemsPanelTemplate>
									</ItemsControl.ItemsPanel>
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<controls:ModernButton Style="{DynamicResource ModernButtonWithNameStyle}" Width="150" Height="150" ButtonName="{Binding Name}">
											</controls:ModernButton>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</Grid>

				<Grid x:Name="HomeGrid" Margin="20,0,0,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="150" />
						<RowDefinition Height="150" />
						<RowDefinition Height="150" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150" />
						<ColumnDefinition Width="150" />
						<ColumnDefinition Width="150" />
						<ColumnDefinition Width="150" />
						<ColumnDefinition Width="150" />
						<ColumnDefinition Width="150" />
					</Grid.ColumnDefinitions>

					<!-- Account -->
					<Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonStyle}">
						<Grid VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5">
							<StackPanel>
								<Image Source="http://images-eds.xboxlive.com/image?url=z951ykn43p4FqWbbFvR2Ec.8vbDhj8G2Xe7JngaTToBrrCmIEEXHC9UNrdJ6P7KIbgsfD63mXFU_1J9M4K4P9MC9JmvpAK38Xkaw0hKBNU7imD1DYrHPio.yGWLd9AkU&amp;format=png&amp;w=402&amp;h=402">
									<Image.Effect>
										<DropShadowEffect ShadowDepth="10" BlurRadius="40" Direction="-90" RenderingBias="Quality" />
									</Image.Effect>
								</Image>

								<Grid>
									<StackPanel Margin="10,20,0,0">
										<TextBlock FontSize="14">Alex Reed</TextBlock>
										<TextBlock FontSize="14">Xerax</TextBlock>
									</StackPanel>
								</Grid>
							</StackPanel>

							<StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
								<TextBlock FontSize="30" FontFamily="{DynamicResource ModernFontLight}">25,982</TextBlock>
								<TextBlock FontSize="14">total downloads</TextBlock>
							</StackPanel>
						</Grid>
					</Button>

					<!-- Viewport -->
					<Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4" Style="{DynamicResource ModernButtonStyle}">
						<TextBlock FontFamily="{DynamicResource ModernFontLight}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="100">
							viewport
						</TextBlock>
					</Button>

					<!-- Apps -->
					<controls:ModernButton Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="app 1">
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="2" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="app 2">
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="2" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="app 3">
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="2" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="app 4">
					</controls:ModernButton>

					<!-- App Management -->
					<controls:ModernButton Grid.Row="0" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="unsnap">
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="1" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="my games &amp; apps">
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="2" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1" Style="{DynamicResource ModernButtonWithNameStyle}"
										   ButtonName="current app">
					</controls:ModernButton>
				</Grid>

				<Grid x:Name="StuffGrid" Margin="20,0,40,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="150" />
						<RowDefinition Height="230" />
						<RowDefinition Height="100" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="250" />
						<ColumnDefinition Width="250" />
						<ColumnDefinition Width="250" />
					</Grid.ColumnDefinitions>

					<controls:ModernButton Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource ModernButtonStyle}">
						<controls:ModernButton.Background>
							<SolidColorBrush Color="{DynamicResource ModernButtonBackgroundSpecialBrushColour}"/>
						</controls:ModernButton.Background>
						<Grid>
							<Image VerticalAlignment="Top" Source="http://i.imgur.com/YTG4EdC.png">
								<Image.Effect>
									<DropShadowEffect ShadowDepth="10" BlurRadius="40" Direction="-90" RenderingBias="Quality" />
								</Image.Effect>
							</Image>

							<TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15" FontFamily="{DynamicResource ModernFontLight}" FontSize="28">
								Gametypes
							</TextBlock>
						</Grid>
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource ModernButtonStyle}">
						<controls:ModernButton.Background>
							<SolidColorBrush Color="{DynamicResource ModernButtonBackgroundSpecialBrushColour}"/>
						</controls:ModernButton.Background>
						<Grid>
							<Image VerticalAlignment="Top" Source="http://i.imgur.com/30NaKG2.png">
								<Image.Effect>
									<DropShadowEffect ShadowDepth="10" BlurRadius="40" Direction="-90" RenderingBias="Quality" />
								</Image.Effect>
							</Image>

							<TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15" FontFamily="{DynamicResource ModernFontLight}" FontSize="28">
								Map Variants
							</TextBlock>
						</Grid>
					</controls:ModernButton>
					<controls:ModernButton Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Style="{StaticResource ModernButtonStyle}">
						<controls:ModernButton.Background>
							<SolidColorBrush Color="{DynamicResource ModernButtonBackgroundSpecialBrushColour}"/>
						</controls:ModernButton.Background>
						<Grid>
							<Image VerticalAlignment="Top" Source="http://i.imgur.com/qaQO83V.png">
								<Image.Effect>
									<DropShadowEffect ShadowDepth="10" BlurRadius="40" Direction="-90" RenderingBias="Quality" />
								</Image.Effect>
							</Image>

							<TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15" FontFamily="{DynamicResource ModernFontLight}" FontSize="28">
								Films
							</TextBlock>
						</Grid>
					</controls:ModernButton>

					<Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
						<StackPanel Orientation="Vertical">
							<xctk:WatermarkTextBox Watermark="yfgfg" Margin="0,10" Style="{DynamicResource OnyxSearchTextBoxStyle}">
								<xctk:WatermarkTextBox.WatermarkTemplate>
									<DataTemplate>
										<ContentControl Content="{Binding}" Foreground="Black" Focusable="False"/>
									</DataTemplate>
								</xctk:WatermarkTextBox.WatermarkTemplate>
							</xctk:WatermarkTextBox>
							<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
								<TextBlock Foreground="{DynamicResource WindowPoweredByBrush}" FontSize="14"> Powered By</TextBlock>
								<Viewbox Stretch="Uniform" Height="20" Width="42" RenderTransformOrigin="0.5,0.5">
