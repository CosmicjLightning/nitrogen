<?xml version="1.0" encoding="utf-8" ?>
<Ruleset>
  
  <!-- THIS FILE IS UNNECESSARY, IMPLEMENT THIS AT THE WRAPPER LEVEL -->

  <!-- RespawnTime <= SecondaryRespawnTime -->
  <ValueComparisonRule ComparisonType="LessThanOrEquals">
    <ChunkValue Chunk="mpvr" Path="BaseVariant/Respawn/RespawnTime"/>
    <ChunkValue Chunk="mpvr" Path="BaseVariant/Respawn/SecondaryRespawnTime"/>
  </ValueComparisonRule>

  <!-- RespawnTraits.Duration <= 60 -->
  <ValueComparisonRule ComparisonType="LessThanOrEquals">
    <ChunkValue Chunk="mpvr" Path="BaseVariant/Respawn/RespawnTraits/Duration"/>
    <Value>60</Value>
  </ValueComparisonRule>
  
  <!-- Valid vehicle set required -->
  <EnumRule Enum="Nitrogen.Content.Halo4.Enums.Halo4VehicleSet">
    <ChunkValue Chunk="mpvr" Path="BaseVariant/MapOverrides/VehicleSet"/>
  </EnumRule>

  <!-- Valid weapon set required -->
  <EnumRule Enum="Nitrogen.Content.Halo4.Enums.Halo4WeaponSet">
    <ChunkValue Chunk="mpvr" Path="BaseVariant/MapOverrides/WeaponSet"/>
  </EnumRule>

  <!-- Valid armor ability set required -->
  <EnumRule Enum="Nitrogen.Content.Halo4.Enums.Halo4ArmorAbilitySet">
    <ChunkValue Chunk="mpvr" Path="BaseVariant/MapOverrides/ArmorAbilitySet"/>
  </EnumRule>

